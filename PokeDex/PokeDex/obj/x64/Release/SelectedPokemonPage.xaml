<Page x:ConnectionId='1'
    x:Class="PokeDex.SelectedPokemonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokeDex"
    xmlns:dex="using:Pokedata"
    xmlns:conv="using:PokeDex.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1400" Height="3000">
    <Page.Resources>
        <conv:DexNumberToStringConverter x:ConnectionId='2' x:Name="DexNumberConverter"/>
        <conv:TypeToTypeImageConverter x:ConnectionId='3' x:Name="TypeConverter"/>
        <conv:ListToAbilitiesConverter x:ConnectionId='4' x:Name="ListToAbilitiesConverter"/>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <RelativePanel Height="3000" Background="AliceBlue">
                <Button x:ConnectionId='5' Name="back"
                    Width="200"
                    Height="75"
                    Content="Back"
                    FontSize="50"
                    Margin="50 30 0 0"
                                            />

                <RadioButton x:ConnectionId='6' x:Name="legendaryChecked"
                        IsEnabled="False"
                        Foreground="Black"
                        Content="Legendary"
                        FontSize="30"
                        Padding="5 -7.5 0 0"
                                                                        
                        Margin="300 50 0 0">
                    <RadioButton.RenderTransform>
                        <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
                    </RadioButton.RenderTransform>
                </RadioButton>

                <Rectangle x:ConnectionId='7' Name="pokemonImg"
                           Width="500" Height="500"
                           Margin="50,150,0,0"
                           RadiusX="50" RadiusY="50"
                           Stroke="Black" StrokeThickness="8">
                    <Rectangle.Fill>
                        <ImageBrush x:ConnectionId='56'                                                   >
                            <ImageBrush.RelativeTransform>
                                <CompositeTransform CenterX="0.5" CenterY="0.5" ScaleX="0.8" ScaleY="0.8"/>
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Button x:ConnectionId='8' Name="playCrySound" Content="   ▶  Cry"                           
                        FontSize="36" FontWeight="Bold"
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Width="250"
                        Margin="700 60 0 0"/>

                <Grid x:ConnectionId='9' Name="NameAndCategoryGrid"
                      Width="650" Height="200"
                      Margin="700 150 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.ColumnSpan="4" Grid.Row="0" Fill="Red" Stroke="Black" StrokeThickness="2"/>
                    <Rectangle Grid.ColumnSpan="4" Grid.Row="1" Fill="White" Stroke="Black" StrokeThickness="2"/>

                    <TextBlock x:ConnectionId='53' x:Name="pokemonNumber"
                                                                                                            
                    Foreground="White"
                    FontSize="70"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    HorizontalTextAlignment="Center"/>

                    <TextBlock x:ConnectionId='54' x:Name="pokemonName"
                                                        
                    Foreground="White"
                    FontSize="70"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    TextAlignment="Left"
                    Margin="20 0 0 0"
                    Grid.ColumnSpan="3" Grid.Column="1"/>

                    <TextBlock x:ConnectionId='55' x:Name="pokemonCategory"
                                                            
                    Foreground="SlateGray"
                    FontSize="50"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    TextAlignment="Center"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"/>
                </Grid>


                <Grid x:ConnectionId='10' Name="TypesGrid"
                      Width="650"
                      Margin="700 375 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Image x:ConnectionId='51' x:Name="type1"
                                                                                                                         
                        Width="150"
                        HorizontalAlignment="Center"
                        Grid.Column="0"/>
                    <Image x:ConnectionId='52' x:Name="type2"
                                                                                                                         
                        Width="150"
                        HorizontalAlignment="Center"
                        Grid.Column="1"/>
                </Grid>

                <Grid x:ConnectionId='11' Name="HeightWeightGrid"
                      Width="650" Height="150"
                      BorderBrush="Black"
                      BorderThickness="5"
                      RelativePanel.Below="TypesGrid"
                      Margin="700 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="2" Grid.Row="0" Fill="White" Stroke="Black" StrokeThickness="2"/>

                    <TextBlock x:ConnectionId='47' x:Name="HeightLabel"
                        Text=" Height"
                        Foreground="Gray"
                        FontSize="50"/>
                    <TextBlock x:ConnectionId='48' x:Name="WeightLabel"
                        Text=" Weight"
                        Foreground="Gray"
                        FontSize="50"
                        Grid.Row="1"/>

                    <TextBlock x:ConnectionId='49' x:Name="HeightValue"
                                                              
                        Foreground="Gray"
                        FontSize="50"
                        TextAlignment="Right"
                        Grid.Column="1"/>
                    <TextBlock x:ConnectionId='50' x:Name="WeightValue"
                                                              
                        Foreground="Gray"
                        FontSize="50"
                        TextAlignment="Right"
                        Grid.Column="1" Grid.Row="1"/>

                    <TextBlock  Text="m"
                        Foreground="Gray"
                        FontSize="50"
                        TextAlignment="Center"
                        Grid.Column="2" Grid.Row="0"/>
                    <TextBlock Text="kg"
                        Foreground="Gray"
                        FontSize="50"
                        TextAlignment="Center"
                        Grid.Column="2" Grid.Row="1"/>
                </Grid>

                <Rectangle x:ConnectionId='12' x:Name="abilityBox"
                    Stroke="Black"
                    StrokeThickness="5"
                    Width="1000"
                    Height="150"
                    Fill="White"
                    Margin="225,700,0,-200"/>
                <TextBlock x:ConnectionId='13' x:Name="potentialAbilities"
                    Margin="235,700,0,-100"
                    Foreground="Gray"
                    FontSize="35"
                    Width="150"
                    Height="50"
                    Text="Abilities:"/>

                <TextBlock x:ConnectionId='14' x:Name="abilities"
                    RelativePanel.Below="potentialAbilities"
                    Margin="245,89,0,0"
                    Width="960"
                    Height="100"
                    Foreground="DeepSkyBlue"
                    FontSize="50"
                                                                                                                  />

                <Rectangle x:ConnectionId='15' x:Name="genderRatioBox"
                    Stroke="Black"
                    StrokeThickness="5"
                    Width="1000"
                    Height="150"
                    Fill="White"
                    RelativePanel.Below="abilityBox"
                    Margin="225,300,0,0"/>
                <TextBlock x:ConnectionId='16' x:Name="male"
                    RelativePanel.Below="abilityBox"
                    Margin="405,325,0,0"
                    Foreground="Blue"
                    FontSize="75"
                    Width="350"
                    Height="100"
                    Text="% male, "/>
                <TextBlock x:ConnectionId='17' x:Name="female"
                    RelativePanel.Below="abilityBox"
                    Margin="835,325,0,0"
                    Foreground="DeepPink"
                    FontSize="75"
                    Width="350"
                    Height="100"
                    Text="% female"/>

                <TextBlock x:ConnectionId='18' x:Name="maleRatio"
                    RelativePanel.Below="abilityBox"
                    Margin="235,325,0,0"
                    Width="150"
                    Height="100"
                    Foreground="Blue"
                    FontSize="75"
                                                                    
                    TextAlignment="Right"/>
                <TextBlock x:ConnectionId='19' x:Name="femaleRatio"
                    RelativePanel.Below="abilityBox"
                    Margin="660,325,0,0"
                    Width="150"
                    Height="100"
                    Foreground="DeepPink"
                    FontSize="75"
                                                                      
                    TextAlignment="Right"/>


                <Grid x:ConnectionId='20' Name="pokemonEntryBox"
                      Width="1250" Height="400"
                      Margin="75 1200 0 0"
                      Background="red"
                      BorderBrush="Black"
                      BorderThickness="5">
                    <Rectangle Fill="White" Margin="46 0 46 0"/>

                    <TextBlock x:ConnectionId='46'                                            
                               Foreground="Gray"
                               FontSize="40"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               Margin="46 0 46 0"/>
                </Grid>

                <Grid x:ConnectionId='21' Name="evolutionChartBox"
                      Width="1250" Height="400"
                      Margin="75 1650 0 0"
                      Background="red"
                      BorderBrush="Black"
                      BorderThickness="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="White" Grid.Column="1" Grid.ColumnSpan="5"/>

                    <HyperlinkButton x:ConnectionId='34' Name="evolveFromPokemonButton"
                                                         
                           Width="230" Height="230"
                           Grid.Column="1">
                        <Image x:ConnectionId='45'                                                         
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
                    </HyperlinkButton>
                    <TextBlock x:ConnectionId='35'                                                
                               FontSize="30" Foreground="DarkGray"
                               TextAlignment="Center"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Bottom"
                               Margin="0 0 0 30"
                               Grid.Column="1"/>

                    <StackPanel Grid.Column="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <TextBlock x:ConnectionId='43'                                                      
                               FontSize="30" TextAlignment="Center" Foreground="SlateGray"/>
                        <TextBlock x:ConnectionId='44'                                                           
                               FontSize="30" TextAlignment="Center" Foreground="SlateGray"/>
                    </StackPanel>

                    <Image x:ConnectionId='36'                                              
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Width="230" Height="230"
                           Grid.Column="3"/>
                    <TextBlock x:ConnectionId='37'                                     
                               FontSize="30" Foreground="DarkGray"
                               TextAlignment="Center"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Bottom"
                               Margin="0 0 0 30"
                               Grid.Column="3"/>

                    <StackPanel Grid.Column="4"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <TextBlock x:ConnectionId='41'                                                    
                               FontSize="30" TextAlignment="Center" Foreground="SlateGray"/>
                        <TextBlock x:ConnectionId='42'                                                         
                               FontSize="30" TextAlignment="Center" Foreground="SlateGray"/>
                    </StackPanel>

                    <HyperlinkButton x:ConnectionId='38' Name="evolveToPokemonButton"
                                                       
                           Width="230" Height="230"
                           Grid.Column="5">
                        <Image x:ConnectionId='40'                                                       
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
                    </HyperlinkButton>
                    <TextBlock x:ConnectionId='39'                                              
                               FontSize="30" Foreground="DarkGray"
                               TextAlignment="Center"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Bottom"
                               Margin="0 0 0 30"
                               Grid.Column="5"/>
                </Grid>


                <RelativePanel Margin="300,2200,0,0"
                               Background="White"
                               BorderBrush="Black" BorderThickness="5"
                               Width="800">

                    <TextBlock x:ConnectionId='22' x:Name="hitPoints"
                               Foreground="Black"
                               FontSize="40"
                               Text="HitPoints:"
                               Margin="20 20 0 0"/>
                    <TextBlock x:ConnectionId='23' x:Name="attack"
                               Foreground="Black"
                               FontSize="40"
                               RelativePanel.Below="hitPoints"
                               Text="Attack:"
                               Margin="20 0"/>
                    <TextBlock x:ConnectionId='24' x:Name="defense"
                               Foreground="Black"
                               FontSize="40"
                               RelativePanel.Below="attack"
                               Text="Defense:"
                               Margin="20 0"/>
                    <TextBlock x:ConnectionId='25' x:Name="specialAttack"
                               Foreground="Black"
                               FontSize="40"
                               RelativePanel.Below="defense"
                               Text="Special Attack:"
                               Margin="20 0"/>
                    <TextBlock x:ConnectionId='26' x:Name="specialDefense"
                               Foreground="Black"
                               FontSize="40"
                               RelativePanel.Below="specialAttack"
                               Text="Special Defense:"
                               Margin="20 0"/>
                    <TextBlock x:ConnectionId='27' x:Name="speed"
                               Foreground="Black"
                               FontSize="40"
                               RelativePanel.Below="specialDefense"
                               Text="Speed:"
                               Margin="20 0"/>

                    <TextBlock x:ConnectionId='28' x:Name="hitPointsStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               TextAlignment="Right"
                                                                           
                               Margin="250 20 0 0"/>
                    <TextBlock x:ConnectionId='29' x:Name="attackStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               RelativePanel.Below="hitPointsStat"
                               TextAlignment="Right"
                                                                               
                               Margin="250 0"/>
                    <TextBlock x:ConnectionId='30' x:Name="defenseStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               RelativePanel.Below="attackStat"
                               TextAlignment="Right"
                                                                                
                               Margin="250 0"/>
                    <TextBlock x:ConnectionId='31' x:Name="specialAttackStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               RelativePanel.Below="defenseStat"
                               TextAlignment="Right"
                                                                                      
                               Margin="250 0"/>
                    <TextBlock x:ConnectionId='32' x:Name="specialDefenseStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               RelativePanel.Below="specialAttackStat"
                               TextAlignment="Right"
                                                                                       
                               Margin="250 0"/>
                    <TextBlock x:ConnectionId='33' x:Name="speedStat"
                               Foreground="Gray"
                               FontSize="40"
                               Width="250"
                               RelativePanel.Below="specialDefenseStat"
                               TextAlignment="Right"
                                                                              
                               Margin="250 0"/>
                </RelativePanel>
            </RelativePanel>
        </ScrollViewer>
    </Grid>
</Page>

